<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>{{service.name}}</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        #main {
            display: flex;
            flex-direction: column;
            height: 100vh;
        }
        #header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 16px 24px;
            border-bottom: 1px solid #ddd;
        }
        #header h2 {
            margin: 0;
            font-size: 20px;
        }
        .breadcrumb {
            font-size: 13px;
            color: #888;
            margin-bottom: 4px;
        }
        .tab-bar {
            display: flex;
            border-bottom: 1px solid #ddd;
            padding: 0 24px;
        }
        .tab {
            padding: 8px 16px;
            background: none;
            border: none;
            border-bottom: 2px solid transparent;
            cursor: pointer;
            font-weight: bold;
            color: #666;
        }
        .tab.active {
            border-bottom-color: #0066cc;
            color: #0066cc;
        }
        #tab-content {
            flex: 1;
            padding: 24px;
            overflow-y: auto;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th {
            text-align: left;
            padding: 12px 16px;
            border-bottom: 1px solid #ddd;
            font-weight: normal;
            color: #666;
        }
        td {
            padding: 12px 16px;
            border-bottom: 1px solid #eee;
        }
        .resource-row {
            cursor: pointer;
        }
        .resource-row:hover {
            background-color: #f5f5f5;
        }
        #pagination {
            display: flex;
            align-items: center;
            padding: 16px 24px;
            gap: 15px;
            font-size: 14px;
        }
        #pagination a {
            color: #0066cc;
            text-decoration: none;
        }
    </style>
</head>
<body>
<div id="main">
    <div id="header">
        <div>
            <div class="breadcrumb">Сервисы и ресурсы /</div>
            <h2>{{service.name}}</h2>
        </div>
    </div>

    <div class="tab-bar">
        <button class="tab active" data-tab="resources">РЕСУРСЫ</button>
        <button class="tab" data-tab="access">ПРАВА ДОСТУПА</button>
        <button class="tab" data-tab="props">СВОЙСТВА</button>
    </div>

    <div id="tab-content">
        <table>
            <thead>
            <tr>
                <th>Ресурс</th>
                <th>Описание</th>
            </tr>
            </thead>
            <tbody>
            {{#each service.resources}}
                <tr class="resource-row" onclick="window.location.href='/resource-view?name={{encodeURIComponent name}}'">
                <td>{{name}}</td>
                <td>{{description}}</td>
                </tr>
            {{else}}
                <tr>
                    <td colspan="2">Нет ресурсов</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>

    <div id="pagination">
        <span>Страница 1 из 1</span>
        <span>На странице:</span>
        <select onchange="changePerPage(this.value)">
            <option value="10">10</option>
            <option value="20">20</option>
            <option value="50" selected>50</option>
            <option value="100">100</option>
        </select>
    </div>
</div>

<script>
    document.querySelectorAll('.tab').forEach(btn => {
        btn.addEventListener('click', () => {
            const tab = btn.dataset.tab;

            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            btn.classList.add('active');
        });
    });

    function changePerPage(perPage) {
        const url = new URL(window.location.href);
        url.searchParams.set('perPage', perPage);
        window.location.href = url.toString();
    }
</script>
</body>
</html>